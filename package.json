{
  "name": "mern-shopping-list",
  "version": "1.0.0",
  "engines": {
    "node": "12.x"
  },
  "description": "Shopping List build with MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navruz-zbx/mern-shopping-list.git"
  },
  "keywords": [
    "node",
    "react",
    "mern"
  ],
  "author": "Navruzbek Iminov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/navruz-zbx/mern-shopping-list/issues"
  },
  "homepage": "https://github.com/navruz-zbx/mern-shopping-list#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.22"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
